<?xml version="1.0" encoding="utf-8" ?>
<resources>
    
    <declare-styleable name="CustomWeekDayView">
        <attr name="week_num" format="string"/>
        <attr name="week_date" format="string"/>
        <attr name="week_bar_height" format="dimension"/>
        <attr name="week_num_text_size" format="dimension"/>
        <attr name="week_date_text_size" format="dimension"/>
        <attr name="week_bar_back_color" format="color"/>
        <attr name="week_num_back_color" format="color"/>
        <attr name="week_date_back_color" format="color"/>
    </declare-styleable>
    
    <declare-styleable name="CustomDayOfMonthInYearView">
        <attr name="day_text" format="string"></attr>
        <attr name="today_flag" format="boolean"></attr>
        <attr name="busy_flag" format="enum">
            <enum name="nothing" value="0"/>
            <enum name="busy01" value="1"/>
            <enum name="busy02" value="2"/>
            <enum name="busy03" value="3"/>
            <enum name="busy04" value="4"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="SwipeLayout">
        <attr name="drag_edge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="leftEdgeSwipeOffset" format="dimension" />
        <attr name="rightEdgeSwipeOffset" format="dimension" />
        <attr name="topEdgeSwipeOffset" format="dimension" />
        <attr name="bottomEdgeSwipeOffset" format="dimension" />
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0" />
            <enum name="pull_out" value="1" />
        </attr>
        <attr name="clickToClose" format="boolean" />
    </declare-styleable>
</resources>