<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/month_inner_rv_item_top_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px001"
        android:background="@color/divider_line"/>

    <LinearLayout
        android:id="@+id/month_inner_rv_item_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/month_inner_rv_item_left_line"
            android:layout_width="@dimen/px001"
            android:layout_height="match_parent"
            android:background="@color/divider_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="15dp"
                android:layout_height="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/month_inner_recycler_view_day_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/day_in_month_bg"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/month_inner_recycler_view_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="01"
                    android:textSize="12sp"/>

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
