<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_add_task_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/themeColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:theme="@style/AlertDialog.AppCompat.Light">

    </android.support.v7.widget.Toolbar>

    <com.mryhc.app.calendar.ui.custom.ListViewSwipeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/list_view_swipe_layout_hide_view"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/md_brown_300"
                android:layout_alignParentRight="true"
                android:text="隐藏"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/list_view_swipe_layout_delete_view"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/md_red_500"
                android:layout_alignParentRight="true"
                android:text="删除"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/list_view_swipe_layout_item_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        </FrameLayout>
        
    </com.mryhc.app.calendar.ui.custom.ListViewSwipeLayout>

    <com.mryhc.app.calendar.ui.custom.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hide"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/md_brown_300"
                android:gravity="center"
                android:text="隐藏"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/md_red_500"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="哈哈哈哈哈哈哈哈哈或或或或或或或或或或或或"/>

        </LinearLayout>


    </com.mryhc.app.calendar.ui.custom.SwipeLayout>

</LinearLayout>
