<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.mryhc.app.calendar.ui.custom.ListViewSwipeLayout
        android:id="@+id/list_view_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.mryhc.app.calendar.ui.custom.MyTextView
                android:id="@+id/list_view_swipe_layout_hide_view"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/md_brown_300"
                android:layout_alignParentRight="true"
                android:text="隐藏"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/list_view_swipe_layout_delete_view"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/md_red_500"
                android:layout_alignParentRight="true"
                android:text="删除"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/list_view_swipe_layout_item_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        </FrameLayout>

    </com.mryhc.app.calendar.ui.custom.ListViewSwipeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px002"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/md_grey_400"/>

</LinearLayout>
