<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.mryhc.app.calendar.ui.custom.SwipeLayout
        android:id="@+id/notice_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/new_notice_item_hide"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/md_brown_300"
                android:gravity="center"
                android:text="隐藏"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/new_notice_item_delete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/md_red_500"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/new_notice_item_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </com.mryhc.app.calendar.ui.custom.SwipeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px001"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/md_grey_800"/>

</LinearLayout>
