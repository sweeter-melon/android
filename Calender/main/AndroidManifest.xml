<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mryhc.app.calendar">

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/my_app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/setting"
            android:name=".ui.activity.SettingActivity"></activity>

        <activity
            android:label="@string/add_event"
            android:name=".ui.activity.AddEventActivity"></activity>

        <activity
            android:label="@string/add_task"
            android:name=".ui.activity.AddTaskActivity"></activity>

        <activity
            android:label="@string/check_task"
            android:name=".ui.activity.CheckTaskActivity"></activity>

        <activity
            android:label="@string/add_notice"
            android:name=".ui.activity.AddNoticeActivity"></activity>

        <activity
            android:label="@string/modify_notice"
            android:name=".ui.activity.ModifyNoticeActivity"></activity>
    </application>

</manifest>